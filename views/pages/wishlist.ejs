<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">
  <script src="../js/jquery-3.6.0.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>

    <title>DearMe | Wishlist</title>
    <!--fav-icon-->
    <link rel="shortcut icon" href="images/Logo/DearMe-Fav-Logo.png">
    <!--using-fontAwesome-->
    <script src="https://kit.fontawesome.com/c8e4d183c2.js" crossorigin="anonymous"></script>

    <style>
        .card-body {
          color: black;
        }
        footer {
          color: white;
        }
        footer li > a {
          color: white;
        }
        a {
          text-decoration: none !important;
        }
      </style>
</head>

<body>
    <%- include('../layouts/navbar.ejs'); %>

    <div style="margin: 10% 5%">
      <h1 class="text-center">Wishlist</h1>
      <br /><br />
      <div class="row">
        <% if(products.length > 0 ){ %>
            <% products.forEach(function(items){ %>
                <div class="row mb-4">
                    <div class="col-md-5 col-lg-3 col-xl-3">
                        <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                            <img class="img-fluid w-100" src="<%= items.item.imagePath %>" alt="Sample">
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-9 col-xl-9">
                        <div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5>
                                        <%= items.item.name %>
                                    </h5>
                                    <p class="mb-3 text-muted text-uppercase small">Price: <%= items.item.price %></p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="/wishlist/remove-w/<%= items.item._id %>" type="button" class="card-link-secondary small text-uppercase mr-3">
                                        <i data-feather="trash"></i> Remove item </a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <hr class="mb-4">
    </div>
</div>
</div>
</div>
<% } else {%>
<div class="card-body" style="width: auto;">
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4 class="text-center m-auto" style="color:rgb(88, 99, 102);"><br><br><br>No items in wishlist!<br></h4>
    </div>
</div>
<br><br><br>
<% } %>
      </div>
    </div> 
</div>
    <%- include('../layouts/footer.ejs'); %>

    <script>
      feather.replace()
    </script>
</body>
</html>